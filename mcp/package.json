{
  "name": "@deltamemory/mcp",
  "type": "module",
  "version": "0.1.1",
  "description": "MCP server for DeltaMemory - cognitive memory for AI agents",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "deltamemory-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "deltamemory",
    "mcp",
    "model-context-protocol",
    "ai",
    "memory",
    "llm",
    "claude",
    "agents"
  ],
  "author": "DeltaMemory",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/deltamemory/deltamemory",
    "directory": "sdks/mcp"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "deltamemory": "^0.2.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2"
  }
}
